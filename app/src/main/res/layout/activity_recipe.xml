<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.arunkarka.cookrecipe.RecipeActivity">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
    android:id="@+id/left_one"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/standard_btn_height"
    android:text="@string/hello_world"/>
    <Button
        android:id="@+id/left_two"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/standard_btn_height"
        android:text="@string/hello_world"/>
    <Button
        android:id="@+id/left_three"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/standard_btn_height"
        android:text="@string/hello_world"/>
    <Button
        android:id="@+id/left_four"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/standard_btn_height"
        android:text="@string/hello_world"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@drawable/border"
        >
        <Button android:id="@+id/end_button"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="@string/end_button"
            android:layout_marginLeft="30dp"
            android:textStyle="bold" />
        <Button android:id="@+id/bonus_button"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="@string/bonus_button"
            android:layout_marginLeft="30dp"
            android:textStyle="bold" />
        </LinearLayout>
</RelativeLayout>
